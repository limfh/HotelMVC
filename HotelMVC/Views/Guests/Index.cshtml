@model IEnumerable<HotelMVC.Models.Guest>

@{
    ViewData["Title"] = "Гости";
}

<h1>Гости</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Добавить гостя</a>
</p>

<form asp-controller="Guests" asp-action="Index" method="get">
    <div class="form-row">
        <div class="form-group col-md-8">
            <label>Поиск (ФИО или паспорт):</label>
            <input type="text" name="searchString" class="form-control" />
        </div>
        <div class="form-group col-md-4 align-self-end">
            <input type="submit" value="Поиск" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Сброс</a>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Подробности</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>