@model HotelMVC.Models.Guest

@{
    ViewData["Title"] = "Создание профиля гостя";
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4>Создание профиля гостя</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Guests" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input type="text" class="form-control" value="@(User.Identity.Name + "@mail.ru")" readonly />
                        <input asp-for="Email" type="hidden" value="@(User.Identity.Name + "@mail.ru")" />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="PassportData" class="control-label"></label>
                        <input asp-for="PassportData" class="form-control" required />
                        <span asp-validation-for="PassportData" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Создать</button>
                        <a asp-action="Index" class="btn btn-secondary">Назад</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}