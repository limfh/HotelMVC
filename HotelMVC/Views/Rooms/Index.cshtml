@model IEnumerable<HotelMVC.Models.Room>

@{
    ViewData["Title"] = "Номера";
}

<h1>Номера</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Добавить номер</a>
</p>

<form asp-controller="Rooms" asp-action="Index" method="get">
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>Тип номера:</label>
            <select name="roomType" class="form-control" asp-items="ViewBag.RoomTypes">
                <option value="">Все</option>
            </select>
        </div>
        <div class="form-group col-md-3">
            <label>Вместимость (мин):</label>
            <input type="number" name="capacity" class="form-control" min="1" max="10" />
        </div>
        <div class="form-group col-md-3">
            <label>Поиск по номеру:</label>
            <input type="text" name="searchString" class="form-control" />
        </div>
        <div class="form-group col-md-3 align-self-end">
            <input type="submit" value="Фильтр" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Сброс</a>
        </div>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerNight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerNight)
                </td>
                <td>
                    @(item.IsAvailable ? "Да" : "Нет")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Подробности</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>