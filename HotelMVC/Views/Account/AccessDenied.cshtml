@{
    ViewData["Title"] = "Доступ запрещен";
}

<div class="text-center mt-5">
    <h1 class="text-danger">403</h1>
    <h2 class="text-danger">Доступ запрещен</h2>
    <p class="lead">У вас нет прав для доступа к этой странице.</p>
    <hr />
    <p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Вернуться на главную</a>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-success">Войти</a>
        }
    </p>
</div>

<style>
    h1 {
        font-size: 6rem;
        margin-bottom: 2rem;
    }

    .lead {
        font-size: 1.5rem;
        margin: 2rem 0;
    }
</style>